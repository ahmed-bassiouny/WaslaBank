<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:src="@drawable/jac"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_avatar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_avatar"
        android:gravity="center"
        android:text="ADAM"
        android:textColor="@color/black" />

    <RatingBar
        android:id="@+id/raring"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tv_user_name"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_avatar"
        android:text="Amazing Service , i like this driver and his car Amazing Service , i like this driver and his carAmazing Service , i like this driver and his carAmazing Service , i like this driver and his car"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/tv_comment"
        android:textColor="@color/black"/>
</RelativeLayout>