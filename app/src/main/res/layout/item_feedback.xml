<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/container">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@null"
        android:src="@drawable/man"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ADAM"
        android:textColor="@color/black" />

    <include
        layout="@layout/my_rating_bar" />
    </LinearLayout>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/arrow"
        android:id="@+id/arrow"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/container"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/arrow"
        android:text="Amazing Service , i like this driver and his car Amazing Service , i like this driver and his carAmazing Service , i like this driver and his carAmazing Service , i like this driver and his car"
        android:padding="10dp"
        android:background="@drawable/feedback_bg"
        android:id="@+id/tv_comment"
        android:textColor="@color/black"/>
</RelativeLayout>