<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="0dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_fill_white"
        android:id="@+id/view_circle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00 AM"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/tv_time"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:layout_toEndOf="@+id/view_circle"/>

    <android.support.v7.widget.CardView
        android:id="@+id/car_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_time"
        android:layout_alignStart="@+id/tv_time"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        android:elevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="john deo"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_user_name"
                android:layout_toStartOf="@+id/raring"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="0dp"
                android:textSize="@dimen/input_size"
                android:textAllCaps="true"/>
            <include
                layout="@layout/my_rating_bar"
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From : Smouha Sports Club Smouha"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_location_from"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:layout_below="@+id/tv_user_name"
                android:layout_toStartOf="@+id/rating"
                android:textSize="@dimen/small_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To : Borg El-Arab"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:id="@+id/tv_location_to"
                android:layout_below="@+id/tv_location_from"
                android:layout_toStartOf="@+id/rating"
                android:textSize="@dimen/small_text" />
            <TextView
                android:layout_below="@+id/rating"
                android:id="@+id/tv_rate"
                android:text="3/4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_location_to"
                android:src="@drawable/map"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>